<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="536.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <TableView fx:id="cartTable" layoutX="25.0" layoutY="48.0" prefHeight="241.0" prefWidth="486.0">
        <columns>
          <TableColumn fx:id="cartViewItemName" prefWidth="415.0" text="Item Name" />
          <TableColumn fx:id="cartViewQuantity" prefWidth="70.0" text="Quantity" />
        </columns>
      </TableView>
      <Button fx:id="cartCheckout" layoutX="72.0" layoutY="334.0" mnemonicParsing="false" onAction="#displayCheckoutView" prefHeight="26.0" prefWidth="82.0" text="Checkout" />
      <Button fx:id="cartClose" layoutX="385.0" layoutY="334.0" mnemonicParsing="false" onAction="#closeCartView" prefHeight="26.0" prefWidth="82.0" text="Close" />
      <Button fx:id="cartRemoveItem" layoutX="169.0" layoutY="334.0" mnemonicParsing="false" onAction="#removeCartItem" prefHeight="26.0" prefWidth="93.0" text="Remove item" />
      <Button fx:id="cartUpdateItem" layoutX="279.0" layoutY="334.0" mnemonicParsing="false" onAction="#displayCartUpdateView" prefHeight="26.0" prefWidth="93.0" text="Update Item" />
   </children>
</AnchorPane>
